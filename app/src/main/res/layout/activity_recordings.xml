<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.RecordingsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="1276dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/listResults"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/listview_border"
            android:scrollbars="horizontal" />

        <TextView
            android:id="@+id/numberOfRecordings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/listResults"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif"
            android:text="0 enregistrement(s) sont disponibles"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/exerciseMenu"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@drawable/listview_border"
            android:text="Exercice"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="563dp" />

        <Button
            android:id="@+id/recordingsMenu"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/exerciseMenu"
            android:layout_toLeftOf="@+id/resultsMenu"
            android:layout_toRightOf="@+id/exerciseMenu"
            android:layout_toStartOf="@+id/resultsMenu"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="Enregistrements"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="563dp" />

        <Button
            android:id="@+id/resultsMenu"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/listview_border"
            android:text="Resultats"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="563dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
