<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.CliniResultActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="RESULTATS PAR PATIENT"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listResultsSession"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:background="@android:drawable/editbox_background"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/Details1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />


        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/btnExercice"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Exercice"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Enregistrement"
            android:id="@+id/btnEnregist"
            android:layout_weight="1"
            android:textAllCaps="false"
            />
       <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Resultat"
        android:id="@+id/btnResultat"
        android:layout_weight="1"
           android:textAllCaps="false"
           />

    </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
