<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.CliniResultActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="RESULTATS PAR PATIENT"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listResultsSession"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:background="@android:drawable/editbox_background"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/Details1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />


        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        >

            <Button
                android:id="@+id/btnExercice"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@drawable/listview_border"
                android:text="Patients"
                android:textAllCaps="false"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="563dp" />

            <Button
                android:id="@+id/btnEnregist"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/exerciseMenu"
                android:layout_toLeftOf="@+id/resultsMenu"
                android:layout_toRightOf="@+id/exerciseMenu"
                android:layout_toStartOf="@+id/resultsMenu"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Enregistrements"
                android:textAllCaps="false"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="563dp" />

            <Button
                android:id="@+id/btnResultat"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/listview_border"
                android:text="Resultats"
                android:textAllCaps="false"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="563dp" />

        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
