<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.fragment.ClinicianHomePageFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textClinicien"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:text="Bonjour LOGIN, c'est un plaisir de vous revoir !"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listResultsClinicien"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/custom_list"
            android:scrollbars="horizontal" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>




