<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.ClinicienSheetHomeActivity">

        <TextView
            android:id="@+id/textClinicien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="@string/txtBienvenue"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/listResultsClinicien"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scrollbars="horizontal" />

        <Button
            android:id="@+id/btnPatient"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@drawable/listview_border"
            android:text="Patients"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="563dp" />

    <Button
        android:id="@+id/btnEnregistClinicien"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/listview_border"
        android:text="Enregistrements"
        android:textAllCaps="false"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="563dp" />

        <Button
            android:id="@+id/btnResultatClinicien"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/listview_border"
            android:text="Resultats"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="563dp" />

        <!-- <Button
             android:id="@+id/btnPatient"
             android:layout_width="0dp"
             android:layout_height="50dp"
             android:layout_weight="1"
             android:text="Patients"
             android:textAllCaps="false" />

         <Button
             android:layout_width="0dp"
             android:layout_height="50dp"
             android:text="Resultat"
             android:id="@+id/btnResultatClinicien"
             android:layout_weight="1"
             android:textAllCaps="false"
             />-->

</RelativeLayout>




