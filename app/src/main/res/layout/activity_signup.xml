<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595959">

    <RelativeLayout
        android:layout_width="927dp"
        android:layout_height="653dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="59dp"
            android:fontFamily="casual"
            android:text="Identifiant (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pseudo"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tv7"
            android:layout_toRightOf="@+id/tv7"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pseudo"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="26dp"
            android:fontFamily="casual"
            android:text="Addresse e-mail (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/pseudo"
            android:layout_alignStart="@+id/pseudo"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/mail"
            android:layout_marginTop="26dp"
            android:fontFamily="casual"
            android:text="Date de naissance"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date_n"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/mail"
            android:layout_alignStart="@+id/mail"
            android:layout_alignTop="@+id/textView7"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="date"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="36dp"
            android:fontFamily="casual"
            android:text="Langue (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/langue"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/date_n"
            android:layout_alignStart="@+id/date_n"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/langues" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="34dp"
            android:fontFamily="casual"
            android:text="Sexe (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/genre"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignLeft="@+id/langue"
            android:layout_alignStart="@+id/langue"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/genres" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/genre"
            android:layout_marginTop="27dp"
            android:fontFamily="casual"
            android:text="Mot de Passe (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mdp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="29dp"
            android:fontFamily="casual"
            android:text="Confirmer le mot de passe (*)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mdpc"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/mdp"
            android:layout_alignStart="@+id/mdp"
            android:layout_alignTop="@+id/textView11"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="27dp"
            android:fontFamily="casual"
            android:text="Ouvrir un compte clinicien"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_above="@+id/clini"
            android:layout_alignLeft="@+id/genre"
            android:layout_alignStart="@+id/genre"
            android:layout_marginLeft="150dp"
            android:layout_marginStart="150dp"
            android:background="@android:color/holo_green_dark"
            android:backgroundTint="@android:drawable/ic_input_add"
            android:onClick="creerCompte"
            android:text="VALIDER"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="967dp"
            tools:layout_editor_absoluteY="576dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_below="@+id/clini"
            android:layout_marginTop="23dp"
            android:text="(*) Champs Obligatoires"
            android:textColor="@android:color/background_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignLeft="@+id/genre"
            android:layout_alignStart="@+id/genre"
            android:background="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_light"
            android:onClick="Retour"
            android:text="ANNULER"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/clini"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/tv7"
            android:layout_alignBottom="@+id/tv7"
            android:layout_alignLeft="@+id/mdpc"
            android:layout_alignStart="@+id/mdpc"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:text="ToggleButton"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="17dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>