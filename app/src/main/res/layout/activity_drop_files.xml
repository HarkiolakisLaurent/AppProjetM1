<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.DropFilesActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="64dp">

        <Button
            android:id="@+id/dropFileButton"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_below="@+id/fileName"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/folderName"
            android:layout_toRightOf="@+id/folderName"
            android:background="@drawable/custom_list"
            android:fontFamily="sans-serif"
            android:text="DÃ©poser le fichier"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_above="@+id/fileName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/drop_file_explanation"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_toLeftOf="@+id/browser"
            android:layout_toStartOf="@+id/browser"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <Button
            android:id="@+id/browser"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/fileName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="127dp"
            android:layout_marginRight="127dp"
            android:background="@drawable/custom_list"
            android:fontFamily="sans-serif"
            android:text="Parcourir"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/explanation"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:layout_toLeftOf="@+id/fileName"
            android:layout_toStartOf="@+id/fileName"
            android:ems="10"
            android:hint="son (facultatif) ; ex : p, mi"
            android:inputType="textPersonName"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
