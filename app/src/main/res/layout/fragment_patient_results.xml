<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.fragment.PatientResultsFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="RESULTATS PAR SESSION"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listResultsSession"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:background="@drawable/custom_list"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/Details1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_list"
            android:text="DETAILS"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="RESULTATS PAR TYPE D'EXERCICE"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listResultsType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_list"
            android:entries="@array/typesExo"
            android:scrollbars="vertical" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
