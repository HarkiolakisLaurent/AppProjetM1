<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.ConfigureExerciseActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/defineExerciseExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/exerciseName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:gravity="center"
            android:text="Choisissez un nom pour votre exercice ainsi que la durée maximale pour prononcer un mot"
            android:textSize="30sp" />

        <Button
            android:id="@+id/browser"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/fileName"
            android:layout_alignEnd="@+id/browseExplanation"
            android:layout_alignRight="@+id/browseExplanation"
            android:layout_marginEnd="231dp"
            android:layout_marginRight="231dp"
            android:background="@drawable/custom_list"
            android:fontFamily="sans-serif"
            android:text="Parcourir"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createExerciseButton"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/textView17"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView17"
            android:layout_marginBottom="53dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_list"
            android:fontFamily="sans-serif"
            android:text="Créer l'exercice"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:text="Configurer un exercice"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/exerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/browseExplanation"
            android:layout_marginBottom="22dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_toLeftOf="@+id/exerciseDuration"
            android:layout_toStartOf="@+id/exerciseDuration"
            android:ems="10"
            android:hint="Nom de l'exercice"
            android:inputType="text"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/exerciseDuration"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/exerciseName"
            android:layout_alignBottom="@+id/exerciseName"
            android:layout_alignLeft="@+id/browser"
            android:layout_alignStart="@+id/browser"
            android:ems="10"
            android:hint="Durée (en secondes)"
            android:inputType="number"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createExerciseButton"
            android:layout_alignLeft="@+id/exerciseName"
            android:layout_alignStart="@+id/exerciseName"
            android:layout_marginBottom="27dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/browseExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/browser"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Sélectionnez un fichier contenant plus de 52 mots/phrases que le patient devra prononcer"
            android:textSize="30sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
